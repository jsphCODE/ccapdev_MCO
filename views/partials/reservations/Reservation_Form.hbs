<!DOCTYPE html>
<html>
<head>
    <title>Reservation Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .seat{
            width: 50px;
            height: 50px;
            margin: 5px;
            border-radius: 5px;
        }

        .seat.selected{
            background-color: green;
            color: white;
        }

        .seat.reserved{
            background-color: #dc3545;
            color: white;
            pointer-events: none;
        }
        
        .seat.available{
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
        }
        
        .flight-info {
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Reservation Form</h1>
        
        {{#if flight}}
        <div class="flight-info">
            <h4>Flight Details</h4>
            <p><strong>Flight:</strong> {{flight.flightNumber}}</p>
            <p><strong>Route:</strong> {{flight.origin}} â†’ {{flight.destination}}</p>
            <p><strong>Date:</strong> {{formatDate flight.schedule}}</p>
            <p><strong>Departure:</strong> {{flight.departure}} | <strong>Arrival:</strong> {{flight.arrival}}</p>
            <p><strong>Aircraft:</strong> {{flight.aircraft}}</p>
        </div>
        {{/if}}
        
        <form id="reservationForm" action="/reservations" method="POST">
            <input type="hidden" name="flight" value="{{flight._id}}">

            <h4 class="mt-4">Passenger Information</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="reserveUser" class="form-label">Full Name *</label>
                    <input type="text" id="reserveUser" name="reserveUser" class="form-control" required>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label for="reserveEmail" class="form-label">Email *</label>
                    <input type="email" id="reserveEmail" name="reserveEmail" class="form-control" required>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="passportNo" class="form-label">Passport Number *</label>
                <input type="text" id="passportNo" name="passportNo" class="form-control" required>
            </div>

            <h4>Seat Selection</h4>
            <div class="mb-3">
                {{#each seatRows}}
                <div class="row justify-content-center mb-2">
                    <div class="col-auto">
                        {{#each this.aisle1}}
                        <button type="button" class="btn seat 
                            {{#if this.isReserved}}reserved{{else}}available{{/if}}"
                            data-seat="{{this.id}}"
                            {{#if this.isReserved}}disabled{{/if}}>
                            {{this.id}}
                        </button>
                        {{/each}}
                    </div>

                    <div class="col-auto">
                        {{#each this.aisle2}}
                        <button type="button" class="btn seat 
                            {{#if this.isReserved}}reserved{{else}}available{{/if}}"
                            data-seat="{{this.id}}"
                            {{#if this.isReserved}}disabled{{/if}}>
                            {{this.id}}
                        </button>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>

            <input type="hidden" id="seatNo" name="seatNo" required>

            <h4>Service Options</h4>
            <div class="mb-3">
                <label for="meal" class="form-label">Meal Options:</label>
                <select name="meal" id="meal" class="form-select">
                    <option value="standard">Standard</option>
                    <option value="vegetarian">Vegetarian</option>
                    <option value="kosher">Kosher</option>
                    <option value="etc">Other</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="extraBaggage" class="form-label">Extra Baggage:</label>
                <select id="extraBaggage" name="extraBaggage" class="form-select">
                    <option value="none">None</option>
                    <option value="small">Small</option>
                    <option value="medium">Medium</option>
                    <option value="large">Large</option>
                </select>
            </div>

            <div id="summary" class="alert alert-info d-none"></div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Submit Reservation</button>
                <a href="/flights/search" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>

<script>
    $(document).ready(function () {
        $(".seat.available").on("click", function () {
            if ($(this).hasClass('reserved')) {
                return;
            }
            
            $(".seat").removeClass("selected"); 
            $(this).addClass("selected");       
            $("#seatNo").val($(this).data("seat")); 
        });

        $("#reservationForm").on("submit", function (e) {
            const seat = $("#seatNo").val();
            
            if (!seat) {
                e.preventDefault();
                $("#summary")
                    .removeClass("d-none alert-info")
                    .addClass("alert-danger")
                    .html("Error: Please select a seat before proceeding.");
                return false;
            }
            
            // Form will submit normally if validation passes
            $("#summary")
                .removeClass("d-none alert-danger")
                .addClass("alert-info")
                .html("Processing your reservation...");
        });
    });
</script>

</body>
</html>

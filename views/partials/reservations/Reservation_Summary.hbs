<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4">Reservation Summary</h2>

        {{!-- Flight Information --}}
        <h4>Flight Information</h4>
        <p><strong>Flight:</strong> {{flight.flightNumber}}</p>
        <p><strong>Route:</strong> {{flight.origin}} → {{flight.destination}}</p>
        <p><strong>Date:</strong> {{formatDate flight.schedule}}</p>
        <p><strong>Departure:</strong> {{flight.departure}}</p>
        <p><strong>Arrival:</strong> {{flight.arrival}}</p>

        <hr>

        {{!-- Passenger --}}
        <h4>Passenger Information</h4>
        <p><strong>Name:</strong> {{reservation.reserveUser}}</p>
        <p><strong>Email:</strong> {{reservation.reserveEmail}}</p>
        <p><strong>Passport No.:</strong> {{reservation.passportNo}}</p>

        <hr>

        {{!-- Reservation --}}
        <h4>Reservation Details</h4>
        <p><strong>Seat:</strong> {{reservation.seat}}</p>
        <p><strong>Meal:</strong> {{reservation.meal}}</p>
        <p><strong>Baggage:</strong> {{reservation.baggage}}</p>

        <hr>

        {{!-- Price Breakdown --}}
        <h4>Price Breakdown</h4>

        <p><strong>Base Fare:</strong> ₱5,000</p>

        {{#if baggageFee}}
        <p><strong>Baggage Fee:</strong> ₱{{baggageFee}}</p>
        {{/if}}

        {{#if mealFee}}
        <p><strong>Meal Fee:</strong> ₱{{mealFee}}</p>
        {{/if}}

        <h4 class="mt-3"><strong>Total:</strong> ₱{{total}}</h4>

        <hr>

        <div class="text-center mt-4">
            <a href="/reservations/list" class="btn btn-primary btn-lg">Go to My Bookings</a>
            <a href="/flights/search" class="btn btn-secondary btn-lg">Book Another Flight</a>
        </div>
    </div>
</div>

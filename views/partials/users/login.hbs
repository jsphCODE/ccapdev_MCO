<div class="container mt-5">
    <h1 class = "mb-4">Profile Login</h1>
    <p>Log into your account</p>

    <form id="loginProfile" action="/login/check" method="GET">

        <div class="mb-3">
            <label for="username" class="form-label">Username *</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email Address *</label>
           <input type="email" id="email" name="email" class="form-control" placeholder="ex: juan_delacruz@email.com" required />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password *</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>

        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary"><b>Login</b></button>
        </div>

        <div class="mt-3" id="loginMsg"></div>
        <script src="checkLoginForm.js"></script>
    </form>

</div>
